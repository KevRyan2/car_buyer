<header class='row'>
  <div class='full col'>
    <nav>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
         <% if user_signed_in? %>
              <li><%= link_to "Logout (#{current_user.email})",               destroy_user_session_path, :method => :delete %></li>
          <% else %>
              <li><%= link_to 'Login', new_user_session_path  %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path  %></li>
        <% end %>
        </ul>
        <%= form_tag vehicles_path, :method => :get do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search Near", :address => nil %>
          </p>  
        <% end %> 

  </nav>
  </div>
</header>


<h1>Listing Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Make</th>
      <th>Model</th>
      <th>Color</th>
      <th>Year</th>
      <th>Owner</th>
      <th>Price</th>
      <th>Address</th>
      <th>Zip</th>
      <th>State</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.user_id %></td>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.owner %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.address %></td>
        <td><%= vehicle.zip %></td>
        <td><%= vehicle.state %></td>
        <td><%= vehicle.latitude %></td>
        <td><%= vehicle.longitude %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
