<h1>Listing Vehicles</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "User", :sort => "User" %></th>
      <th><%= link_to "Category", :sort => "Category" %></th>
      <th><%= link_to "Make", :sort => "Make" %></th>
      <th><%= link_to "Model", :sort => "Model" %></th>
      <th><%= link_to "color", :sort => "Color" %></th>
      <th><%= link_to "Year", :sort => "Year" %></th>
      <th><%= link_to "Owner", :sort => "Owner" %></th>
      <th><%= link_to "Price", :sort => "Price" %></th>
      <th><%= link_to "Address", :sort => "Address" %></th>
      <th><%= link_to "Zip", :sort => "Zip" %></th>
      <th><%= link_to "State", :sort => "State" %></th>      
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.user_id %></td>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.owner %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.address %></td>
        <td><%= vehicle.zip %></td>
        <td><%= vehicle.state %></td>
        <td><%= vehicle.latitude %></td>
        <td><%= vehicle.longitude %></td>
        <% if user_signed_in? && current_user.id == vehicle.user_id %>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Vehicle', new_vehicle_path %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
