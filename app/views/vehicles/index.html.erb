            <%= text_field_tag :search, params[:search], :class => "text-field", placeholder: "Search Vehicles" %>
            <%= submit_tag "Search", :class => "submit-tag", :address => nil %>
        <% end %> 

      <br />
        <%= form_tag vehicles_path, :method => :get, id: "search-form" do %>
          <p>
            <%= text_field_tag :search_map, params[:search_map] %>
            <%= select_tag :miles, options_for_select([["within 20 miles", "20"], ["within 40 miles", "40"]]), class: "form-control" %>
            <%= submit_tag "Search Near", :address => nil %>
          </p>  
        <% end %> 
      </div> 
</div>

<div class="container container-table" >
  <h1 class="container-theader">Listing Vehicles</h1>
<table class="imagetable">
  <thead>
    <tr>
     
      <th><%= link_to "User", :sort => "User" %></th>
      <th><%= link_to "Category", :sort => "Category" %></th>
      <th><%= link_to "Make", :sort => "Make" %></th>
      <th><%= link_to "Model", :sort => "Model" %></th>
      <th><%= link_to "Color", :sort => "Color" %></th>
      <th><%= link_to "Year", :sort => "Year" %></th>
      <th><%= link_to "Owner", :sort => "Owner" %></th>
      <th><%= link_to "Price", :sort => "Price" %></th>
      <th><%= link_to "Address", :sort => "Address" %></th>
      <th><%= link_to "Zip", :sort => "Zip" %></th>
      <th><%= link_to "State", :sort => "State" %></th>      
      <th class="hidden-col">Latitude</th>
      <th class="hidden-col">Longitude</th>
 
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.user_id %></td>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.owner %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.address %></td>
        <td><%= vehicle.zip %></td>
        <td><%= vehicle.state %></td>
        <td class="hidden-col"><%= vehicle.latitude %></td>
        <td class="hidden-col"><%= vehicle.longitude %></td>
        <% if user_signed_in? && current_user.id == vehicle.user_id %>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

